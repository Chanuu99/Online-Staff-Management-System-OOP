<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
version="3.1">

<!--Login Servlet-->
<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>com.login.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>


<!--User Insert Servlet-->
<servlet>
	<servlet-name>InsertServlet</servlet-name>
	<servlet-class>com.login.userInsertServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>InsertServlet</servlet-name>
	<url-pattern>/InsertServlet</url-pattern>
</servlet-mapping>

<!--User Delete Servlet-->
<servlet>
	<servlet-name>DeleteServlert</servlet-name>
	<servlet-class>com.login.userDeleteServlert</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>DeleteServlert</servlet-name>
	<url-pattern>/DeleteServlert</url-pattern>
</servlet-mapping>

<!--User Update Servlet-->
<servlet>
	<servlet-name>UpdateServlet</servlet-name>
	<servlet-class>com.login.userUpdateServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>UpdateServlet</servlet-name>
	<url-pattern>/UpdateServlet</url-pattern>
</servlet-mapping>

</web-app>